//Program to find sum of the series 1/1! + 1/2! + 1/3! + ...... + 1/n!
#include<stdio.h>
int fact(int i);

int main()
{
    int i,f,n;
    float result=0.0 ;
    printf("\n Enter the value of n : ");
    scanf("%d",&n);
    for(i=1;i<=n;i++)
    {
     result += 1.0/fact(i);
    }
    printf("\n The sum of the series 1/1! + 1/2! + 1/3! + ...... is %f \n",result);
    return 0;
}

int fact(int num)
{
    int a,f =1;
    for(a=1;a<=num;a++)
    {
     f = f*a;
    }
    return f;
}
